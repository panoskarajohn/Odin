{
  "app": {
    "name": "Odin.Gateway",
    "service": "gateway-service",
    "version": "1.0.0"
  },
  "logger": {
    "applicationName": "api-gateway",
    "excludePaths": [
      "/ping",
      "/metrics"
    ],
    "level": "information",
    "console": {
      "enabled": true
    },
    "file": {
      "enabled": true,
      "path": "logs/logs.txt",
      "interval": "hour"
    },
    "seq": {
      "enabled": true,
      "url": "http://localhost:5341",
      "token": "secret"
    }
  },
  "AllowedHosts": "*"
}
