{
  "app": {
    "name": "Odin.Gateway",
    "service": "gateway-service",
    "version": "1.0.0"
  },
  "auth": {
    "certificate": {
      "location": "certs/localhost.pfx",
      "password": "test",
      "rawData": ""
    },
    "jwt": {
      "issuer": "odin",
      "audience": "odin",
      "validIssuer": "odin",
      "validAudience": "odin",
      "validateAudience": true,
      "validateIssuer": true,
      "validateLifetime": true
    }
  },
  "logger": {
    "applicationName": "api-gateway",
    "excludePaths": [
      "/ping",
      "/metrics"
    ],
    "level": "information",
    "console": {
      "enabled": true
    },
    "file": {
      "enabled": true,
      "path": "logs/logs.txt",
      "interval": "hour"
    },
    "seq": {
      "enabled": true,
      "url": "http://localhost:5341",
      "token": "secret"
    }
  },
  "AllowedHosts": "*"
}
